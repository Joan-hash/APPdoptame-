<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wraper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background2"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/wraper_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/pet"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/pet"
            app:srcCompat="@drawable/img_pet1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wraper_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/icon_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_like" />
        <ImageView
            android:id="@+id/icon_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_message" />
        <ImageView
            android:id="@+id/icon_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_report" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wraper_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/desripcion"
            android:textColor="@color/colorFont"
            android:textSize="@dimen/posts" />
    </LinearLayout>
</LinearLayout>